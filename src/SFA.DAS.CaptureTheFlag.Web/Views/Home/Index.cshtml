@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Home Page";
}

<div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Welcome to Capture The Flag</h1>

            @if (SignInManager.IsSignedIn(User))
            {
                <form action="/Game/FindGame" method="get">
                    <button class="govuk-button" type="submit">Find a new game</button>
                </form>
            }
            else
            {
                <p>Login or Register to start a new game.</p>
            }

            <a role="button" class="govuk-button govuk-button--start" asp-controller="SignIn" asp-action="Index">Play now </a>

        </div>

        <div class="govuk-grid-column-one-third">

            <h2 class="govuk-heading-m" id="subsection-title">
                Menu
            </h2>
            <nav role="navigation" aria-labelledby="subsection-title">
                <ul class="govuk-list govuk-!-font-size-16">
                    <li>
                        <a class="govuk-link" href="#">
                            Account settings
                        </a>
                    </li>
                    <li>
                        <a class="govuk-link" href="#">
                            Game Settings
                        </a>
                    </li>
                    <li>
                        <a class="govuk-link" href="#">
                            Forums
                        </a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>
</div>





